generator client {
  provider = "prisma-client-js"
}
datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}
model Product {
  id          Int      @id @default(autoincrement())
  name        String
  description String
  price       Int
  imageUrl    String
}
model User {
  id    Int    @id @default(autoincrement())
  email String @unique
  name  String
}
model Order {
  id        Int      @id @default(autoincrement())
  user      User     @relation(fields: [userId], references: [id])
  userId    Int
  products  Product[]
  total     Int
  createdAt DateTime @default(now())
}
